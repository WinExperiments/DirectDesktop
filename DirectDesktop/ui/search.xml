<duixml>
	<HWNDElement resid="SearchUI" sheet="searchstyle" layoutpos="client" layout="filllayout()" background="rgb(0,0,0)">
		<Element layoutpos="client" layout="borderlayout()">
			<Element id="atom(searchbase)" layoutpos="client" layout="borderlayout()"/>
		</Element>
		<Element layout="filllayout()" layoutpos="client" padding="rect(48rp,48rp,48rp,48rp)" class="searchview">
			<Element id="atom(pagecontent)" layout="borderlayout()" layoutpos="client" background="argb(0,0,0,0)">
				<Element layout="borderlayout()" layoutpos="top" font="messagefont;133%" margin="rect(0,0,0,16rp)" height="40rp" background="argb(0,0,0,0)">
					<DDScalableTouchButton id="atom(closebutton)" layoutpos="right" font="messagefont;133%" margin="rect(16rp,0,0,0)" class="pushbuttonsecondary" content="X" padding="rect(8rp,0,8rp,0)"/>
					<DDScalableTouchButton id="atom(searchbutton)" shortcut="83" layoutpos="right" font="messagefont;133%" margin="rect(16rp,0,0,0)" class="pushbuttonprimary" content="Search" padding="rect(8rp,0,8rp,0)"/>
					<DDScalableTouchEdit id="atom(searchbox)" layoutpos="client" background="argb(0,0,0,0)" prompttext="Type here to search" NeedsFontResize="true"/>
				</Element>
				<TouchScrollViewer id="atom(SearchResults)" background="argb(0,0,0,0)" active="mouse|pointer|keyboard" layoutpos="client" xscrollable="false" yscrollable="true" xbarvisibility="never" ybarvisibility="asneeded" behaviors="PVL::AnimationTrap()">
					<Element id="atom(rescontainer)" layoutpos="client" layout="verticalflowlayout(0,2,2,2)">
						<DDScalableElement background="argb(0,0,0,0)" FirstScaledImage="3059" ScaledImageIntervals="7" DrawType="2" EnableAccent="true" direction="ltr" margin="rect(0,0,0,8rp)"/>
						<DDScalableRichText background="argb(0,0,0,0)" content="Search" font="iconfont;133%;semibold" compositedtext="true" textglowsize="0"/>
					</Element>
				</TouchScrollViewer>
			</Element>
		</Element>
	</HWNDElement>
	<RichText resid="ResultCount" layoutpos="client" foreground="white" font="36pt;Normal;None;Segoe UI" contentalign="wrapcenter"/>
	<LVItem resid="SearchResult" layout="borderlayout()" background="white" layoutpos="top" height="80rp" borderthickness="rect(0,16rp,0,0)" bordercolor="rgb(32,32,32)">
		<RichText id="atom(name)" layoutpos="top" foreground="black" font="12pt;Normal;None;Segoe UI"/>
		<RichText id="atom(path)" layoutpos="top" foreground="gray" font="9pt;Normal;None;Segoe UI"/>
	</LVItem>
	<stylesheets>
		<style resid="searchstyle" base="ressheet(31, DDBase)">
			<if id="atom(searchbase)">
				<if class="TransparentEnabled">
					<Element background="argb(0,0,0,0)"/>
				</if>
				<if class="TransparentDisabled">
					<Element background="argb(128,224,224,224)"/>
				</if>
			</if>
			<Element foreground="black"/>
			<DDScalableRichText foreground="black"/>
			<if class="searchview">
				<Element background="argb(128,224,224,224)"/>
			</if>
		</style>
		<style resid="searchstyledark" base="ressheet(31, DDBaseDark)">
			<if id="atom(searchbase)">
				<if class="TransparentEnabled">
					<Element background="argb(0,0,0,0)"/>
				</if>
				<if class="TransparentDisabled">
					<Element background="argb(128,32,32,32)"/>
				</if>
			</if>
			<Element foreground="white"/>
			<DDScalableRichText foreground="white"/>
			<if class="searchview">
				<Element background="argb(128,32,32,32)"/>
			</if>
		</style>
	</stylesheets>
</duixml>