<duixml>
	<HWNDElement resid="ShutDownWindows" sheet="shutdownstyle" layoutpos="client" layout="borderlayout()">
		<Element padding="rect(0,4rp,0,4rp)" layoutpos="top" layout="borderlayout()" background="argb(0,0,0,0)"> // Extra padding, honestly don't know if it's good or not
			<Element id="atom(FakeTitlebar)" layout="flowlayout(0,2,0,0)" layoutpos="top" padding="rect(sysmetric(32),sysmetric(33),sysmetric(32),sysmetric(8))" background="argb(0,0,0,0)">
				<Element id="atom(TitlebarIcon)" layout="flowlayout(0,2,2,0)" height="sysmetric(4)" padding="rect(sysmetric(32),sysmetric(46),sysmetric(32),sysmetric(46))">
					<RichText id="atom(moon)" layout="filllayout()" content="resstr(209)" width="sysmetric(49)" height="sysmetric(50)" contentalign="topleft">
						<RichText id="atom(stars)" direction="ltr" layoutpos="client" content="resstr(211)" width="sysmetric(49)" height="sysmetric(50)" contentalign="topleft"/>
					</RichText>
				</Element>
				<DDScalableElement id="atom(TitlebarText)" height="sysmetric(4)" font="captionfont;100%" NeedsFontResize="true" compositedtext="true" textglowsize="0" contentalign="middleleft" padding="rect(0,0,0,sysmetric(46))"/>
			</Element>
		</Element>
		<DDScalableElement id="atom(Logo)" direction="ltr" ScaledImageIntervals="7" DrawType="2" contentalign="middlecenter" layoutpos="top" height="96rp" padding="rect(0,0,0,16rp)"/> // Use 12rp instead of 16 if using standard titlebar
		<Element class="separator" layoutpos="top" height="1rp"/>
		<Element id="atom(StatusBar)" layoutpos="top" layout="filllayout()" class="section"/>
		<Element id="atom(ShutdownEventTracker)" layoutpos="top" layout="filllayout()" class="section"/>
		<Element layoutpos="bottom" layout="flowlayout(0,0,0,0)" padding="rect(12rp,12rp,12rp,12rp)" background="argb(0,0,0,0)">
			<DDScalableButton id="atom(AdvancedOptionsExpando)" class="hyperlink" layout="flowlayout(0,2,0,2)" padding="rect(-4rp,0,0,0)">
				<RichText id="atom(AdvancedOptionsArrow)" background="argb(0,0,0,0)" padding="rect(0,1rp,0,0)"/>
				<DDScalableElement content="resstr(543, library(bootux.dll))" background="argb(0,0,0,0)"/>
			</DDScalableButton>
		</Element>
		<Element class="separator" layoutpos="bottom" height="1rp"/>
		<Element id="atom(ShutdownActions)" class="section" layoutpos="top" height="211rp" layout="gridlayout(2,3)" padding="rect(12rp,12rp,12rp,12rp)">
			<DDIconButton id="atom(SwitchUser)" class="dialogbutton" layout="verticalflowlayout(0,2,2,2)" content="resstr(3052, library(shutdownux.dll))" iconcontent="resstr(201)" accdesc="resstr(3053, library(shutdownux.dll))"/>
			<DDIconButton id="atom(SignOut)" class="dialogbutton" layout="verticalflowlayout(0,2,2,2)" content="resstr(3034, library(shutdownux.dll))" iconcontent="resstr(202)" accdesc="resstr(3035, library(shutdownux.dll))"/>
			<DDIconButton id="atom(SleepButton)" class="dialogbutton" layout="verticalflowlayout(0,2,2,2)" content="resstr(3019, library(shutdownux.dll))" iconcontent="resstr(203)" accdesc="resstr(3021, library(shutdownux.dll))"/>
			<DDIconButton id="atom(Hibernate)" class="dialogbutton" layout="verticalflowlayout(0,2,2,2)" content="resstr(3022, library(shutdownux.dll))" iconcontent="resstr(204)" accdesc="resstr(3025, library(shutdownux.dll))"/>
			<DDIconButton id="atom(Shutdown)" class="dialogbutton" layout="verticalflowlayout(0,2,2,2)" content="resstr(3013, library(shutdownux.dll))" iconcontent="resstr(205)" accdesc="resstr(3015, library(shutdownux.dll))"/>
			<DDIconButton id="atom(Restart)" class="dialogbutton" layout="verticalflowlayout(0,2,2,2)" content="resstr(3016, library(shutdownux.dll))" iconcontent="resstr(206)" accdesc="resstr(3018, library(shutdownux.dll))"/>
		</Element>
		<Element id="atom(AdvancedOptions)" class="section" layoutpos="none" layout="borderlayout()" padding="rect(12rp,0rp,12rp,12rp)">
			<Element id="atom(DelayBar)" padding="rect(0,0,0,4rp)" layoutpos="top" layout="borderlayout()" background="argb(0,0,0,0)">
				<DDCheckBox id="atom(delaytoggle)" layoutpos="left" padding="rect(0,2rp,0,2rp)" content="resstr(4035)"/>
				<DDScalableTouchEdit id="atom(delayseconds)" layoutpos="left" width="80rp" height="32rp" Enabled="false" font="messagefont;115%" NeedsFontResize="true"/>
				<DDScalableElement content="resstr(4036)" layoutpos="left" padding="rect(0,2rp,0,2rp)" height="32rp" background="argb(0,0,0,0)" font="messagefont;115%" NeedsFontResize="true"
								   compositedtext="true" textglowsize="0" contentalign="middlecenter"/>
			</Element>
			<Element layout="verticalflowlayout(0,0,0,2)" layoutpos="client" background="argb(0,0,0,0)">
				<DDScalableButton id="atom(RestartWinRE)" margin="rect(0,0,0,4rp)" content="resstr(1810, library(bootux.dll))" class="hyperlink"/>
				<DDScalableButton id="atom(RestartBIOS)" layoutpos="none" content="resstr(1618, library(bootux.dll))" class="hyperlink"/>
			</Element>
		</Element>
	</HWNDElement>
	<Element resid="StatusBar" layout="borderlayout()" padding="rect(12rp,12rp,12rp,0)" background="argb(0,0,0,0)">
		<Element layoutpos="left" layout="flowlayout(0,2,0,0)">
			<RichText id="atom(StatusIcon)" font="14pt;Normal;None;Segoe Fluent Icons" content="resstr(207)" contentalign="middleleft"/>
		</Element>
		<Element layoutpos="right" layout="flowlayout(0,2,0,0)">
			<DDScalableTouchButton id="atom(StatusCancel)" class="pushbuttonsecondary" layout="filllayout()" minsize="size(96rp,32rp)" content="resstr(801, library(user32.dll))" contentalign="middlecenter"/>
		</Element>
		<Element layoutpos="left" layout="verticalflowlayout(0,2,0,2)" padding="rect(0,0,8rp,0)">
			<DDScalableElement id="atom(StatusText)" class="statustext" contentalign="middleleft|endellipsis"/>
			<DDScalableElement id="atom(ReasonText)" layoutpos="none" class="statustext" contentalign="middleleft|endellipsis"/>
		</Element>
	</Element>
	<Element resid="ShutdownEventTracker" layout="borderlayout()" padding="rect(12rp,12rp,12rp,0)" background="argb(0,0,0,0)">
		<DDScalableElement id="atom(SETText)" layoutpos="top" class="statustext" font="messagefont;115%;bold" height="20rp"/>
		<DDScalableElement id="atom(SETDescription)" layoutpos="top" class="statustext" content="resstr(3003, library(shutdownux.dll))" font="messagefont;100%" height="28rp"/>
		<DDCombobox id="atom(SETReason)" layoutpos="top" listmaxheight="360rp"/>
	</Element>
	<stylesheets>
		<style resid="shutdownstyle" base="ressheet(31, DDBase)">
			<HWNDElement background="rgb(243,243,243)"/>
			<if accdesc="Windows 10">
				<DDScalableElement FirstScaledImage="11101" EnableAccent="false"/>
			</if>
			<if accdesc="Windows 11">
				<DDScalableElement FirstScaledImage="11108" EnableAccent="false"/>
			</if>
			<if accdesc="Windows Server 2022">
				<DDScalableElement FirstScaledImage="11301" EnableAccent="false"/>
			</if>
			<if accdesc="Windows Server 2025">
				<DDScalableElement FirstScaledImage="11308" EnableAccent="false"/>
			</if>
			<if id="atom(TitlebarIcon)">
				<Element foreground="black"/>
			</if>
			<if id="atom(TitlebarText)">
				<DDScalableElement foreground="black"/>
			</if>
			<if class="section">
				<Element background="argb(102,255,255,255)"/>
			</if>
			<if class="separator">
				<Element background="argb(32,0,0,0)"/>
			</if>
			<if class="dialogbutton">
				<DDIconButton FirstScaledImage="1015" ScaledImageIntervals="7" DrawType="1" ImageCount="8" ImageIndex="1" NeedsFontResize="true" tooltip="true" margin="rect(0,0,12rp,12rp)"
							  foreground="rgb(0,0,0)" font="messagefont;115%" borderthickness="rect(4rp,4rp,4rp,4rp)" padding="rect(-4rp,-4rp,-4rp,-4rp)"/>
				<if mousefocused="true">
					<DDIconButton ImageIndex="2"/>
				</if>
				<if Pressed="true">
					<DDIconButton ImageIndex="3" foreground="rgb(64,64,64)"/>
				</if>
				<if Enabled="false">
					<DDIconButton ImageIndex="4" foreground="rgb(128,128,128)"/>
				</if>
				<if id="atom(DDIB_Icon)">
					<DDScalableRichText font="resstr(200)" padding="rect(0,8rp,0,0)"/>
				</if>
				<if id="atom(DDIB_Text)">
					<DDScalableRichText padding="rect(0,8rp,0,0)"/>
				</if>
			</if>
			<if id="atom(DelayBar)">
				<Element foreground="themeable(gtc(DirectUILight::Button,1,1,3803), black)"/>
			</if>
			<if id="atom(StatusIcon)">
				<RichText foreground="20006"/>
			</if>
			<if class="statustext">
				<DDScalableElement foreground="black" compositedtext="true" textglowsize="0" font="messagefont;115%" NeedsFontResize="true"/>
			</if>
			<if id="atom(SETDescription)">
				<DDScalableElement foreground="rgb(128,128,128)"/>
			</if>
			<if id="atom(AdvancedOptionsArrow)">
				<RichText content="resstr(143)" font="12pt;Normal;None;Segoe Fluent Icons"/>
				<if selected="true">
					<RichText content="resstr(142)"/>
				</if>
			</if>
		</style>
		<style resid="shutdownstyledark" base="ressheet(31, DDBaseDark)">
			<HWNDElement background="rgb(32,32,32)"/>
			<if accdesc="Windows 10">
				<DDScalableElement FirstScaledImage="11201" EnableAccent="false"/>
			</if>
			<if accdesc="Windows 11">
				<DDScalableElement FirstScaledImage="11208" EnableAccent="false"/>
			</if>
			<if accdesc="Windows Server 2022">
				<DDScalableElement FirstScaledImage="11401" EnableAccent="false"/>
			</if>
			<if accdesc="Windows Server 2025">
				<DDScalableElement FirstScaledImage="11308" EnableAccent="false"/>
			</if>
			<if id="atom(TitlebarIcon)">
				<Element foreground="white"/>
			</if>
			<if id="atom(TitlebarText)">
				<DDScalableElement foreground="white"/>
			</if>
			<if class="section">
				<Element background="argb(12,255,255,255)"/>
			</if>
			<if class="separator">
				<Element background="argb(32,255,255,255)"/>
			</if>
			<if class="dialogbutton">
				<DDIconButton FirstScaledImage="2015" ScaledImageIntervals="7" DrawType="1" ImageCount="8" ImageIndex="1" NeedsFontResize="true" tooltip="true" margin="rect(0,0,12rp,12rp)"
							  foreground="rgb(255,255,255)" font="messagefont;115%" borderthickness="rect(4rp,4rp,4rp,4rp)" padding="rect(-4rp,-4rp,-4rp,-4rp)"/>
				<if mousefocused="true">
					<DDIconButton ImageIndex="2"/>
				</if>
				<if Pressed="true">
					<DDIconButton ImageIndex="3" foreground="rgb(160,160,160)"/>
				</if>
				<if Enabled="false">
					<DDIconButton ImageIndex="4" foreground="rgb(96,96,96)"/>
				</if>
				<if id="atom(DDIB_Icon)">
					<DDScalableRichText font="resstr(200)" padding="rect(0,8rp,0,0)"/>
				</if>
				<if id="atom(DDIB_Text)">
					<DDScalableRichText padding="rect(0,8rp,0,0)"/>
				</if>
			</if>
			<if id="atom(DelayBar)">
				<Element foreground="themeable(gtc(DarkMode_Explorer::Button,1,1,3803), white)"/>
			</if>
			<if id="atom(StatusIcon)">
				<RichText foreground="20003"/>
			</if>
			<if class="statustext">
				<DDScalableElement foreground="white" compositedtext="true" textglowsize="0" font="messagefont;115%" NeedsFontResize="true"/>
			</if>
			<if id="atom(SETDescription)">
				<DDScalableElement foreground="rgb(160,160,160)"/>
			</if>
			<if id="atom(AdvancedOptionsArrow)">
				<RichText content="resstr(143)" font="12pt;Normal;None;Segoe Fluent Icons"/>
				<if selected="true">
					<RichText content="resstr(142)"/>
				</if>
			</if>
		</style>
	</stylesheets>
</duixml>